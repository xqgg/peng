                    </div>
                    <div class="col-lg-3 ">
                        <img class="hole" src="~/images/MoleGame/土堆.png" />
                    </div>
                    <div class="col-lg-3 ">
                        <img class="lovelyMole" src="~/images/MoleGame/萌地鼠.png" />
                        <div class="hole" style="background:url(/images/MoleGame/土堆.png)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        //document.querySelector("button").onclick = function () {
        //    document.getElementsByClassName("mole")[0].style.top = "-35px"
        //}
        //$(".hole").click(function (event) {
